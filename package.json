{
  "name": "design-ai-linter",
  "version": "0.1.0",
  "description": "A linter for Design System tokens exported from Figma",
  "private": true,
  "workspaces": [
    "example",
    "packages/design-ai-linter"
  ],
  "bin": {
    "dslint": "packages/design-ai-linter/dist/cli/cli.js"
  },
  "scripts": {
    "build": "pnpm --filter design-ai-linter build",
    "start": "pnpm --filter design-ai-linter start",
    "dev": "pnpm --filter design-ai-linter dev",
    "lint": "eslint packages/design-ai-linter/src packages/design-ai-linter/test --ext .ts",
    "test": "pnpm --filter design-ai-linter test",
    "test:run": "pnpm --filter design-ai-linter test:run",
    "prepare": "husky"
  },
  "keywords": [
    "design-system",
    "linter",
    "figma",
    "tokens"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "packages/design-ai-linter/src/**/*.ts": [
      "eslint --fix"
    ],
    "packages/design-ai-linter/test/**/*.ts": [
      "eslint --fix"
    ]
  }
}
