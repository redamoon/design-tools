{
  "source": {
    "path": "./tokens.json"
  },
  "files": "src/**/*.{tsx,ts,css}",
  "rules": {
    "naming-convention": {
      "severity": "error",
      "pattern": "^([a-z]+\\.)+[a-z0-9\\-]+$"
    },
    "raw-color": {
      "severity": "warn",
      "enabled": true
    },
    "raw-pixel": {
      "severity": "warn",
      "enabled": true
    },
    "custom-rules": [
      {
        "id": "custom-color-accessibility",
        "description": "Check color tokens for accessibility issues",
        "severity": "warn",
        "prompt": "./prompts/color-accessibility.md",
        "schema": "./schemas/color-accessibility.ts"
      }
    ]
  }
}

